page{
  background: #f6f6f6;
  display: flex;
  justify-content: center;
}

.divcontainer{
  margin-top: 100rpx;
  height: 900rpx;
  width: 700rpx;
  border:2rpx solid rgb(0,0,0,0.1);
}

.division{
  border-bottom:2rpx solid rgb(0,0,0,0.1);
  width: 700rpx;
  height: 120rpx;
  background: white;
}

.division-hover{
  background: rgb(0,0,0,0.1);
}

.divtext{
height:60rpx;
width: 650rpx;
display:flex;
align-items:center;
padding-left: 20rpx;
overflow:hidden; /*超出一行文字自动隐藏*/
text-overflow:ellipsis;/*文字隐藏后添加省略号 */
white-space:nowrap;  /*强制不换行*/
}

/*悬浮窗CSS*/
.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0);
  background: rgba(0, 0, 0, 0.4);
  display: none;
}
.zan-dialog__container {
  position: fixed;
  bottom: 200rpx;
  width: 650rpx;
  height: 600rpx;
  left: 50rpx;
  background: #f8f8f8;
  transform: translateY(300%);/*不点击时在300%处隐藏，点击后0处出现*/
  transition: all 0.4s ease;/*出现和消失均用时0.4s*/
  z-index: 12;
  border-radius: 20rpx;
  background: #f6f6f6;
  box-shadow: 0px 3px 3px 2px gainsboro;
  padding-top: 20rpx;
}
.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
}
.zan-dialog--show .zan-dialog__mask {
  display: block;
}

