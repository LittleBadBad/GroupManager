<scroll-view scroll-y class="divcontainer">
  <view wx:for="{{divisionlist}}" data-index="{{index}}" bindtap="clickDiv">
    <view class="division" hover-class="division-hover">
      <view class="divtext" style="font-size:30rpx;">{{item.dname}}</view>
      <view class="divtext" style="font-size:24rpx;color:grey">{{item.intro}}</view>
    </view>
  </view>
  <view class="division" style="display:flex;align-items:center;padding-left:20rpx;color:grey" hover-class="division-hover" bindtap="clickAdd">添加...</view>
</scroll-view>

<!--添加部门浮窗-->
<view class="{{ addclicked ? 'zan-dialog--show' : '' }}">
  <view class="zan-dialog__mask" bindtap="toggleAdd" />
    <view class="zan-dialog__container" style="height:800rpx">
      <form bindsubmit="submitDivision">
        <view class="infocard">部门名：
          <input name="name" bindfocus="nameFocus" bindblur="nameBlur"
          value="{{editing ? divchosed.dname : (nameinputing ? '' : '例：公关部')}}"
          readonly="{{editing}}"
          style="{{nameinputing ? '' : 'color:grey'}}"></input>
          <view wx:if="{{nameunfilled}}" style="color:red;font-size:24rpx">未填写</view>
        </view>
        <view class="infocard">部门简介：
          <input name="intro"
          value="{{editing ? divchosed.intro : ''}}"
          bindfocus="introFocus" bindblur="introBlur"
          ></input>
        </view>
        <view class="infocard">部长：
          <picker
          range="{{memberlist}}"
          value="{{i}}" bindchange="chgMinister"
          range-key="{{'name'}}">
            <view wx:if="{{i}}" style="display:flex;align-items:center">
              <image class="memberavatar" src="{{memberlist[i].avatar}}"/>
              <view>{{memberlist[i].name}}</view>
            </view>
            <view wx:else>点击选择</view>
          </picker>
        </view>
        <view class="infocard" style="height:300rpx">权限：
          <scroll-view scroll-y class="authview">
            <view wx:for="{{authlist}}" wx:for-index="index">
              <view class="infocard" hover-class="auth-hover" bindtap="clickAuth"
              style="margin-bottom:0;font-size:28rpx;height:55rpx;background:{{item.clicked ? 'rgb(0,0,0,0.1)' : ''}}"
              data-index="{{index}}"
              >{{item.name}}</view>
            </view>
          </scroll-view>
        </view>
        <button form-type="submit">确认</button>
      </form>
    </view>
</view>

<!--部门浮窗-->
<view class="{{ divclicked ? 'zan-dialog--show' : '' }}">
      <view class="zan-dialog__mask" bindtap="toggleDiv" />
      <view class="zan-dialog__container"
      style="height:700rpx;width:600rpx;">
          <view bindtap="editDiv"
          style="text-align:right;font-size:24rpx;color:grey;margin-right:16rpx">编辑</view>
          <view style="text-align:center;margin-top:40rpx">{{divchosed.dname}}</view>
          <view style="margin:40rpx 30rpx;font-size:24rpx">简介：{{divchosed.intro}}</view>
          <scroll-view scroll-y
          style="height:400rpx;background:rgb(0,0,0,0.1);border:2rpx solid rgb(0,0,0,0.3)">
            <view wx:if="{{!divmember}}">该部门尚无部员</view>
            <view wx:for="{{divmember}}">
              <view class="member">
                <image class="memberavatar" src='{{item.avatar}}'></image>
                  <view style="font-size:30rpx">
                    <view style="margin auto auto">{{item.name}}</view>
                    <view style="margin auto auto">{{item.division.divstatus}}</view>
                  </view>
              </view>
            </view>
          </scroll-view>
      </view>
</view>