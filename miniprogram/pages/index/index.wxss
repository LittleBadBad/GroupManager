/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo, .uploader, .tunnel {
  margin-top: 40rpx;
  margin-left:80rpx; 
  height: 140rpx;
  width: 100%;
  background: #f6f6f6;
  /* border: 1px solid rgba(0, 0, 0, 0.1); */
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color:black;
  background-color: #f6f6f6;
  background-size: cover;
}
.userinfo-nickname-h{
  font-size: 32rpx;
  color:black;
  background-color: #b9b3b3;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.uploader, .tunnel {
  height: auto;
  padding: 0 0 0 40rpx;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}

.uploader-text, .tunnel-text {
  width: 100%;
  line-height: 52px;
  font-size: 34rpx;
  color: #007aff;
}


.disable {
  color: #888;
}

.buttoncontainer{
  padding: 0 10px;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}

.groupbutton1{
  margin-top: 20rpx;
  margin-right: 10rpx;
  margin-left: 200rpx;
  size: mini;
  color: gray;
  font-size: 24rpx;
  text-align: center; 
}

.button{
  margin-left: 20rpx;
  color: gray;
  font-size: 24rpx;
  text-align: center; 
}

.logo{
  display: inline-block;
  margin-left: 10px;
  width:25px;
  height:25px;
}

.groupcontainer{
  margin-top: 10rpx;
  height: 70%;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.groupinfo{
  margin:10px 10px;
  height: 210px;
  width: 140px;
  background: white;
  border-radius: 10rpx;
  transition: all 300ms ease;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.groupinfo-card{
  height:100px;
  background: white;
  margin-bottom: 2px;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.groupinfo-hover{
  background: rgba(0, 0, 0, 0.1);
}

.groupinfo-avatar {
  width: 50px;
  height: 50px;
  margin-top: 20px;
  margin-bottom: 10px;
  border-radius: 50%;
  background-size: cover;
  background-color: grey;
}

.line1{
  display: flex;
  justify-content: center;
  margin-bottom: 10px;
}

.groupname{
  font-size: 12px;
}

.gnum{
  position: relative;
  left:5px;
  font-size: 12px;
  color: gray;
}

.groupsum{
  font-size: 10px;
  width: 80%;
  text-align: center;
  color: gray;
  overflow:hidden; /*超出一行文字自动隐藏*/
  text-overflow:ellipsis;/*文字隐藏后添加省略号 */
}

.gidinput{
  margin-top: 10rpx;
  width:100rpx;
  height:70rpx;
}

.inputline{
  margin-top:40rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
}

.img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  margin: 20rpx auto;/*0 auto表示上下0 左右auto*/
}

.uploadgroup{
  background-color: #b9b3b3;
}



/*头像编辑窗CSS*/
.edit-view{
  transform: translateX(0);
}

.groupsearchcontainer{
  height: 225px;
}